{% extends 'VistiyosERPERPBundle::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    "bundles/vistiyoserperp/css/common.css"
    "bundles/vistiyoserperp/css/timeline.css" filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block menu %}
    <nav class="navbar navbar-default" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle"
                    data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Brand</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        {{ knp_menu_render('VistiyosERPERPBundle:Builder:mainMenu',{'template':'VistiyosERPERPBundle:Menu:knp_menu.html.twig'}) }}
        <!-- /.navbar-collapse -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                {{ knp_menu_render('VistiyosERPERPBundle:Builder:sidebarMenu',{'template':'VistiyosERPERPBundle:Menu:knp_menu.html.twig'}) }}
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{% block dashboard_title %}{% endblock %}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        {% block dashboard_content %}
        {% endblock %}
    </div>
{% endblock %}